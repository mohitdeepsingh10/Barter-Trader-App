<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list> <!-- Background shape -->
            <item>
                <shape>
                    <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
                    <corners android:radius="5dp" />
                    <stroke android:width="1dp" android:color="?attr/colorOnSecondaryContainer" />
                    <solid android:color="?attr/colorSecondaryContainer" />
                </shape>
            </item> <!-- Down arrow icon -->
            <item android:right="5dp" android:drawable="@drawable/ic_dropdown" android:gravity="end|center_vertical" />
        </layer-list>
    </item>
</selector>