<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/leftLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_left_message"
        android:padding="8dp"
        android:visibility="gone"
        android:layout_gravity="start">

        <TextView
            android:id="@+id/leftMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Left message"
            android:textColor="?attr/colorOnSecondaryContainer"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/leftTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="12:00 PM"
            android:textColor="?attr/colorSecondary"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rightLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_right_message"
        android:padding="8dp"
        android:visibility="gone"
        android:layout_gravity="end">

        <TextView
            android:id="@+id/rightMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Right message"
            android:textColor="?attr/colorOnPrimaryContainer"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/rightTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="12:00 PM"
            android:textColor="?attr/colorSecondary"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
